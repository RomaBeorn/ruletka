doctype html
html
  head
    meta(charset='utf-8')
    title Report
  
  body
            h1.custom Bug Report
            form(name='form', action='/report', method='POST',onsubmit='valid(this); return false;')
                  input(id="name", name='name', type='text', placeholder='name', required='', style="width: 250px;")
                  input(id="text", name='text', type='text', placeholder='description of the problem', required='',style="width: 250px;")
                  input(id="email", name='email', type='email', placeholder='email', required='',style="width: 250px;")
                  input(return='form', type='submit', value='Отправить', name="submit", onclick="valid(document.getElementById('form'))")