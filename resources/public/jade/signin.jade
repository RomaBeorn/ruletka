doctype html
html
  head
    meta(charset='UTF-8')
    title Вход
  body
          h3 Рулетка
            h4 Вход
            form(name='login_form', action='/signin', method='POST')
              input(name='signin_login', type='text', value='Логин', onblur="if(this.value == '') this.value = 'Логин'", onfocus="if(this.value == 'Логин') this.value = ''",  required=''")
              input(name='signin_password', type='text', value='Пароль', onblur="if(this.value == '') this.value = 'Пароль'", onfocus="if(this.value == 'Пароль') this.value = ''",  required=''")
              input(return='form', type='submit', value='Войти', onClick="return check(this.form)")